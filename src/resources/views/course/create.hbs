<div class="mt-4 mb-4">
    <h2>Đăng ký khóa học</h2>
    <form method="POST" action="/course/store">
        <div class="form-group">
            <label for="name">Tên khóa học:</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả:</label>
            <textarea class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="image">Đường dẫn file ảnh:</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>
        <div class="form-group">
            <label for="slug">Tham số slug:</label>
            <input type="text" class="form-control" id="slug" name="slug" disabled>
        </div>
        <div class="form-group">
            <label for="videoId">Đường dẫn video:</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ người học:</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>