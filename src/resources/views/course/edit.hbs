<div class="mt-4 mb-4">
    <h2>Cập nhật khóa học</h2>
    <form method="POST" action="/course/{{course._doc._id}}?_method=PUT"> {{!-- Override POST -> PUT --}}
        <div class="form-group">
            <label for="name">Tên khóa học:</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course._doc.name}}">
        </div>
        <div class="form-group">
            <label for="description">Mô tả:</label>
            <textarea class="form-control" id="description" name="description">{{course._doc.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Đường dẫn file ảnh:</label>
            <input type="text" class="form-control" id="image" name="image" value="{{course._doc.image}}">
        </div>
        <div class="form-group">
            <label for="slug">Tham số slug:</label>
            <input type="text" class="form-control" id="slug" name="slug" value="{{course._doc.slug}}" disabled>
        </div>
        <div class="form-group">
            <label for="videoId">Đường dẫn video Youtube:</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{course._doc.videoId}}">
        </div>
        <div class="form-group">
            <label for="level">Trình độ người học:</label>
            <input type="text" class="form-control" id="level" name="level" value="{{course._doc.level}}">
        </div>
        <button type="submit" class="btn btn-primary">Sửa khóa học</button>
    </form>
</div>