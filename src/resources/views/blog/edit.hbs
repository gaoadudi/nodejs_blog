<div class="mt-4 mb-4">
    <h2>Cập nhật bài viết</h2>
    <form method="POST" action="/blog/{{blog._doc._id}}?_method=PUT"> {{!-- Override POST -> PUT --}}
        <div class="form-group">
            <label for="title">Tiêu đề:</label>
            <input type="text" class="form-control" id="title" name="title" value="{{blog._doc.title}}" required>
        </div>
        <div class="form-group">
            <label for="description">Mô tả:</label>
            <textarea class="form-control" id="description" name="description">{{blog._doc.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="content">Nội dung:</label>
            <textarea class="form-control" rows="7" id="content" name="content">{{blog._doc.content}}</textarea>
        </div>
        <div class="form-group">
            <label for="slug">Tham số slug:</label>
            <input type="text" class="form-control" id="slug" name="slug" value="{{blog._doc.slug}}" disabled>
        </div>
        <input type="hidden" name="author" value="{{currentUser._id}}"/>
        <button type="submit" class="btn btn-primary">Sửa bài viết</button>
        <a class="btn btn-secondary" href="/me/stored/blogs">Quay lại</a>
    </form>
</div>