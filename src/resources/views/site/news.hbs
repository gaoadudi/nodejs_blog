<div class="mt-4 mb-4">
    <div class="row">
        {{#each blogs}}
        <div class="col-sm-12 col-lg-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <a href="/blog/{{this._doc.slug}}">
                        <h5 class="card-title">{{this._doc.title}}</h5>
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text">{{this._doc.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="lazy-load"></div>
    </div>
</div>

<script>
    let page = 2; // Bắt đầu tải từ trang thứ 2
    let isLoading = false;

    function lazyLoad() {
        if (isLoading) return;
        isLoading = true;

        fetch('/blogs/lazy-load?page=' + page) // Lấy dữ liệu
            .then(res => res.json())
            .then(data => {
                const lazyLoadDiv = document.querySelector('.lazy-load');
                data.forEach(item => {
                    const itemDiv = document.createElement('div');
                    itemDiv.innerHTML = `
                        <div class="col-sm-12 col-lg-6 mb-3">
                            <div class="card">
                                <div class="card-header">
                                    <a href="/blog/${item.slug}">
                                        <h5 class="card-title">${item.title}</h5>
                                    </a>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">${item.description}</p>
                                </div>
                            </div>
                        </div>
                    `;
                    lazyLoadDiv.appendChild(itemDiv);
                });
                page++;
                isLoading = false;
            });
    }

    window.addEventListener('scroll', () => {
        const { scrollTop, scrollHeight, clientHeight } = document.documentElement;
        if (scrollTop + clientHeight >= scrollHeight - 5) {
            lazyLoad();
        }
    });

    lazyLoad(); // Tải trang đầu tiên
</script>